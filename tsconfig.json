{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test-utils"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "__tests__", "test-utils"]
}